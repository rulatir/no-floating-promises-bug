{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2020",
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": true,
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}